<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>Exciting and Beautiful Adventures Ahead!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new"
          >Add New Campground</a
        >
      </p>
    </div>
  </header>

  <!-- <div class="row">
  <div class="col-lg-12">
  <h3>Our most popular campgrounds</h3>
</div>
</div> -->
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% for(var i=0; i < campgrounds.length; i++){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campgrounds[i].img %>" />
        <div class="caption">
          <h4><%= campgrounds[i].name %></h4>
        </div>
        <p>
          <a
            href="/campgrounds/<%= campgrounds[i]._id %>"
            class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>
